<h1 class="p-2">New game:</h1>
<% @letters.each do |letter| %>
<p class="d-inline-block p-3 bg-primary text-white"> <%= letter %></p> 
<% end %>
<form action="score" method="post" data-turbo="false" class="d-block p-4" margin="0">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input class="d-inline-block" type="text" name="user_input"> 
  <input type="submit" value="Play">
</form>


